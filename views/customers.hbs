<h2>Customers</h2>
<table id="customer-table">
    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-value={{this.customerID}}>
            <td>{{this.customerID}}</td>
            <td>{{this.name}}</td>
            <td>{{this.address}}</td>
            <td>{{this.phone}}</td>
            <td><button onclick="deleteCustomer({{this.customerID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_customer.js"></script>

<!-- /views/index.hbs -->
<h2>Add Customer</h2>
<form id="add-customer-form" method="POST" action="/add-customer-form">
    
    <label for="input-name">Name: </label>
    <input type="text" name="input-name" id="input-name">

    <label for="input-address">Address: </label>
    <input type="text" name="input-address" id="input-address">

    <label for="input-phone">Phone: </label>
    <input type="number" name="input-phone" id="input-phone">

    <input type="submit">
</form>
<h2>Updating Customer</h2>
<form id="update-customer-form">
    <label for="input-customer-name">Full name: </label>
    <select name="input-customer-name" id="mySelect">
        <option value="">Select a Customer</option>
        {{#each data}}
        <option value="{{this.customerID}}">{{this.name}}</option>
        {{/each}}
    </select>

    <label for="input-address">Address: </label>
    <input type="text" name="input-address" id="input-address">

    <label for="input-phone">Phone: </label>
    <input type="number" name="input-phone" id="input-phone">

    <input type="submit">
</form>
<script src="./js/update_customer.js"></script>